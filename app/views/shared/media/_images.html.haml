-# @expects: local 'images'

- if images.present? and images.size > 1
  %a.prev.browse.left_scroll.prev
  #thumbnails.scrollable
    .items
      - images.each do |image|
        = image_tag image.url(:medium), :size=>"100x100"
  %a.prev.browse.right_scroll.next

  %hr{:style=>"clear: both"}
  / #image_box.standard_overlay
  /   #images.scrollable_popup
  /     .items
  /       - images.each do |image|
  /         = image_tag image.url(:medium)
  /   / .navi.prev
  /   / .navi.next
