%h2== Create a new #{model.name.titleize}
- item ||= model.new
- associations ||= {}
- semantic_form_for [:admin, item] do |form|
  - form.inputs do
    - fields.each do |field|
      - if field.is_a? Proc
        = field.call(form)
      - elsif association = association_exists?(field, associations)
        = form.input association
      - else
        = form.input field
  - form.buttons do
    = form.commit_button
