.question.small
  .item-block
    %h4= link_to caption(question.question,80), question_path(question)
    .profile-pic= local_linked_profile_pic question.user
    .item-meta-data
      %h3= asked_by question
      %span.btnComment== #{like_link question} #{question.votes_tally}
      %span.btnComment== #{link_to answer_translate(question.answers.count), question_path(question, :anchor => "commentListTop")}