.question
  .item-block
    %h5= link_to caption(question.question,80), question_path(question)
    .item-meta-data
      %h6= asked_by question
      .meta-data-actions
        %span== #{like_link question} #{question.votes_tally}
        %span.pipe
          |
        %span== #{link_to answer_translate(question.answers.count), question_path(question, :anchor => "commentListTop")}