- canvas_preference ||= false
- external_widget ||= external_widget
.generic.small
  .profile-pic.margins= local_linked_profile_pic item.user
  .item-block
    - unless external_widget
      %h4= link_to item.title, path_to_self(item)
    - else
      %h4= link_to item.title, path_to_self(item, canvas_preference), :target => "_top"