-# expects: local 'item, index' optional thumb_type
- model_name = item.class.name.underscore
- thumb_type = thumb_type || "profile"
- if index == 0
  .featured
    %div{:class => "item_1 #{model_name}"}
      - if thumb_type.present? and thumb_type == 'profile'
        .thumb.user
          = local_linked_profile_pic item.user
      .itemBlock
        %h2
          %span.ellipsis_title_2
            = link_to item.answer, path_to_self(item.item_link), {:class => 'ellipsis_text'}
        .itemMeta
          %h3= t('asked_by', :fb_name => local_linked_profile_name(item.user), :date => timeago(item.created_at))
          %span.btnComment== #{like_link item} #{item.votes_tally}
- else
  .item_2
    .itemBlock
      %h4= link_to item.item_title, path_to_self(item.item_link)