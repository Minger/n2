.generic.small
  .itemBlock
    %h4= link_to item.title, path_to_self(item)
    .profilePic= local_linked_profile_pic item.user
    .itemMeta
      %h3= t('posted_by', :fb_name => local_linked_profile_name(item.user), :date => time_ago_in_words(item.created_at))
      %span.btnComment== #{like_link item} #{item.votes_tally}
      %span.btnComment== #{link_to t('comments'), path_to_self_with_anchor(item, "commentListTop")} #{item.comments_count}