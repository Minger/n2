.itemBlock
  %h4= link_to caption(question.question,120), question_path(question, :only_path => false)
  .profilePic= local_linked_profile_pic(question.user, :only_path => false)
  .itemMeta
    %h3= t('asked_by', :fb_name => local_linked_profile_name(question.user, :only_path => false), :date => time_ago_in_words(question.created_at))
    %span.btnComment== #{link_to answer_translate(question.answers.count), question_path(question, :only_path => false, :anchor => "commentListTop")}