.itemBlock
  %h4= link_to caption(question.question,80), question_path(question, :only_path => false), :target => "_top"
  .profilePic= local_linked_profile_pic(question.user, :only_path => false, :target => "_top")
  .itemMeta
    %h3= t('asked_by', :fb_name => local_linked_profile_name(question.user, :only_path => false, :target => "_top"), :date => timeago(question.created_at))
    %span.btnComment== #{link_to answer_translate(question.answers.count), question_path(question, :only_path => false, :anchor => "commentListTop"), :target => "_top"}