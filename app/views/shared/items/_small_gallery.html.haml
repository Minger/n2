.gallery.small
  .item-block
    %h4= link_to gallery.title, gallery_path(gallery)
    .profile-pic= local_linked_profile_pic gallery.user
    .item-meta-data
      %h3= generic_posted_by gallery
      %span.btnComment== #{like_link gallery} #{gallery.votes_tally}
      %span.btnComment== #{link_to t('galleries.item_count', :count => gallery.gallery_items.count), gallery_path(gallery)}
