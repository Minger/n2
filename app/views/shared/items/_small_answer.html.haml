.answer.small
  %h4= link_to caption(answer.answer,120), question_path(answer.question)
  .profilePic= local_linked_profile_pic answer.user
  .itemMeta
    %h3= t('asked_by', :fb_name => local_linked_profile_name(answer.user), :date => time_ago_in_words(answer.created_at))
    %span.btnComment.float_left== #{like_link answer} #{answer.votes_tally}
    %span.btnComment.float_left== #{link_to answer_comments_translate(answer.comments_count), question_path(answer.question, :anchor => "commentListTop")}