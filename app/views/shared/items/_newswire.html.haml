.newswire.large
  -# NOTE:: This inline style was added at some point
  -#.storyBlockWrap{:style => "width: 490px; clear: left; word-wrap: break-word;"}
  .storyBlockWrap
    %h2.storyHead= link_to newswire.title, newswire.url, :target => "_newswire"
    %p.storyCaption= linked_newswire_caption newswire
    .storyBlockMeta.float_left
      %h3= t('.via', :title => newswire.feed.title, :date => time_ago_in_words((newswire.updated_at || newswire.created_at)))
      %span.btnComment.float_left= link_to t('.publish', :site_title => APP_CONFIG['site_title']), new_story_path(:newswire_id => newswire)
      -# TODO:: add this to a job queue
      %span.btnComment.float_left= link_to t('.quick_post', :site_title => APP_CONFIG['site_title']), quick_post_newswire_path(newswire), :class => 'quick_post'
      %span.btnComment.float_left= link_to t('.read'), newswire.url, :target => "_cts" 
