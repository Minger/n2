%h3= link_to newswire.title, newswire.url, :target => "_newswire"
%p
  = linked_newswire_caption newswire
  = link_to 'More', newswire.url, :target => "_cts"
.meta-data
  %h6= newswire_via_with_date newswire
  %h6
    %span= link_to t('newswires.publish', :site_title => get_setting('site_title').try(:value)), new_story_path(:newswire_id => newswire)
    %span.pipe
      |
    -# TODO:: add this to a job queue
    %span= link_to t('newswires.quick_post', :site_title => get_setting('site_title').try(:value)), quick_post_newswire_path(newswire), :class => 'quick_post'
    %span.pipe
      |
    %span= link_to t('newswires.read'), newswire.url, :target => "_cts"
