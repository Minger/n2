.answer.large
  %blockquote
    .quotes= nl2br linkify(answer.answer)
  .item-block
    .profile-pic= local_linked_profile_pic answer.user
    .item-meta-data
      %h3= answered_by answer
      %span.btn_left= link_to answer_comments_translate(answer.comments.size), '#', :class => 'answer_comments_link'
  - if show_comments.present?
    %br
    .clearfix
    = render :partial => 'shared/comments', :locals => { :comments => answer.comments }
    = render :partial => 'shared/comment_form', :locals => { :commentable => answer }
  - if @answer.moderatable?
    = render :partial => 'shared/moderate_form', :locals => { :moderatable => answer }
