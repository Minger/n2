.forum_topic
  .item-block
    %h2= link_to topic.title, topic.item_link
    %p= caption topic.item_description
    .profile-pic= local_linked_profile_pic topic.user
    .item-meta-data
      %h3= generic_posted_by topic
      -#%span== #{like_link topic} #{topic.votes_tally}
      %span== #{link_to t('comments'), topic.item_link} #{topic.comments_count}
