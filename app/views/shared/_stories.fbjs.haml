- stories ||= Content.active.paginate :page => params[:page], :per_page => 10, :order => "created_at desc"
%ul
  - stories.each do |content|
    %li{'data-id' => content.cache_key}
      .thumb
        - if content.images.present?
          = image_tag content.images.first.url(:thumb)                  
        - else
          = image_tag ('default/default_thumb_b.gif', :width => "100%")
      .storyBlockWrap.storyBlockSpacer
        %h2.storyHead= link_to content.title, story_path(content, :format => 'fbml')
        %p.storyCaption= linked_story_caption content, 150, false, :format => 'fbml'
        .profilePic= local_linked_profile_pic content.user, :format => 'fbml'
        .storyBlockMeta.float_left
          %h3= t('.stories_posted_by', :fb_name => local_linked_profile_name(content.user, :format => 'fbml'), :date => time_ago_in_words(content.created_at))
          %span.btnComment.float_left== #{like_link content, :format => 'fbml'} #{content.votes_tally}
          %span.btnComment.float_left== #{link_to t('.stories_comments'), story_path(content, :anchor => "commentListTop", :format => 'fbml')} #{content.comments_count}