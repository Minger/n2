- item1 = vo.dataset.first
- item2 = vo.dataset[1]
- item3 = vo.dataset.last
.panel-3
  .panel-content.featured-panel
    .panel-twothird
      .item-with-image
        .item-thumb
          %a= image_tag(thumb_image_or_default(item1))
        .item-text
          %h1= link_to item1.item_title, item1
          %p= caption item1.item_description
          .meta-data
            .profile-pic
              = local_linked_profile_pic item1.user
            %h6  
              By
              = local_linked_profile_name item1.user
              in
              %a Blogs

            %h6 
              %span.count 
                7
              %a 
                Comments

    .panel-third.alpha
      %ul.list-items
        %li
          .item-with-image
            .item-thumb
              %a= image_tag(thumb_image_or_default(item2))
            .item-text
              %h3= link_to item2.item_title, item2
              .meta-data
                %h6 
                  %span.count 
                    7
                  %a 
                    Comments

        %li.last
          .item-with-image
            .item-thumb
              %a= image_tag(thumb_image_or_default(item3))
            .item-text
              %h3= link_to item3.item_title, item3
              .meta-data
                %h6
                  %span.count 
                    7
                  %a 
                    Comments
