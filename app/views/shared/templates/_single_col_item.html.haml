- item = vo.dataset.first

.panel-1.featured-panel.top-secondary-corners.bottom-secondary-corners.float-right
  %div.panel-bar.panel-full.top-secondary-corners.shadow{:class => vo.setting.css_class}
    - if vo.setting and vo.setting.locale_title
      %h2= vt.t(vo.setting.locale_title)
      - if vo.setting.locale_subtitle
        %p= vt.t(vo.setting.locale_subtitle)
      - if vo.setting.use_post_button
        = post_something vo.setting.klass_name, "center"
  .panel-content
    - if item
      %h1
        %span.ellipsis_title_3= link_to sanitize_title(item.item_title), item.item_link, :class => 'ellipsis_text'

      .meta-data
        .profile-pic
          = local_linked_profile_pic item.item_user
        %h6= posted_by_with_topic(item)
        %h6= action_links(item)