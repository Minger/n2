- item = vo.dataset.first

.panel-1
  .feature-panel
    .feature-item-medium
      .panel-bar
        - if vo.setting and vo.setting.locale_title
          %h2= vt.t(vo.setting.locale_title)
          .panel-bar-actions
            - if vo.setting.use_post_button
              = post_something vo.setting.klass_name
              = pipe_spacer
              %a View
      - if vo.setting.locale_subtitle
        .subtitle
          = vt.t(vo.setting.locale_subtitle)
      .single-item-wrap
        - if item
          %h4= link_to sanitize_title(item.item_title), item.item_link
          .meta-data
            %h6= posted_by_with_topic(item)
