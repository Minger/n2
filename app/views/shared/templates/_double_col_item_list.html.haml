- items = vo.dataset
- item1 = items.first
- remaining_items = items.slice(1,items.size)

.panel-2
  .panel-bar
    - if vo.setting and vo.setting.locale_title
      %h2= vt.t(vo.setting.locale_title)
      - if vo.setting.use_post_button
        .panel-bar-actions
          = post_something vo.setting.klass_name, "center"
  .feature-panel
    - if item1
      .feature-item-medium.first
        = link_to image_tag(medium_image_or_default(item1)), item1.item_link
        .feature-caption
          %h3
            %span.ellipsis_title_2= link_to sanitize_title(item1.item_title), item1.item_link
          %p.ellipsis_caption_1
            %span.ellipsis_text= item_text(item1)


    .feature-item-medium.last
      .item-list-wrap
        .item-list
          %ul
            - if remaining_items
              - remaining_items.each do |item|
                %li
                  %h4
                    %span.ellipsis_title_2= link_to sanitize_title(item.item_title), item.item_link, :class => 'ellipsis_text'
                  .meta-data
                    %h6= posted_by_with_topic(item)