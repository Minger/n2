-# @expects: local 'comments'

%a#commentsListTop{:name => "commentsListTop"}
- if comments.present?
  #commentThread.panel_1
    .panelBar
      %h2= t '.comment_title'
      - if comments.present? and comments.first.refineable?
        .refine_link
          = render :partial => 'shared/forms/refine_dropdown'
    = render :partial => 'shared/comment', :collection => comments
- else
  #commentThreadEmpty.empty_panel_1
    %p= t '.no_comments_msg'
