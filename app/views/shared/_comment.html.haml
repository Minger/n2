-# @expects: local 'comment' %>

.comment_block
  .thumb= local_linked_profile_pic comment.user
  .storyBlockWrap
    .storyBlockMeta
      %h3= t('.posted_by', :fb_name => (local_linked_profile_name comment.user), :date => time_ago_in_words(comment.created_at))
    %blockquote
      .quotes= comment.comments
      %span.btn_left== #{link_to t('.comments_like'), like_comment_path(comment.id), :class => "voteLink"} #{comment.votes.size}
      -# if comment.moderatable?
        = render :partial => 'shared/flag_form', :locals => { :flaggable => comment }
  .comment_reply
    %a{:href => '#'}= "Reply" 
