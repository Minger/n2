-# @expects: local 'comment' %>

%li.comment_block
  %blockquote
    .quotes= nl2br linkify(comment.comments)
  .profile-pic= local_linked_profile_pic comment.user
  .item-block
    .item-meta-data
      %h3= generic_posted_by comment
      %span.btnComment= votes_link(comment, comment.votes_tally)
      - if comment.moderatable?
        .float_left= render :partial => 'shared/flag_form.html', :locals => { :flaggable => comment }

