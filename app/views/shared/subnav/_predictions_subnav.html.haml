#subNav.tabs
  .left_tabs
    %ul#toggle_tabs_unused.toggle_tabs.clearfix
      %li.first= link_to t('predictions.browse'), predictions_path, :class => sub_tab_selected?(@current_sub_tab, 'Browse')
      - if current_user
        %li.first= link_to t('predictions.yours'), your_predictions_path, :class => sub_tab_selected?(@current_sub_tab, 'Yours')
      %li.first= link_to t('predictions.scores'), scores_predictions_path, :class => sub_tab_selected?(@current_sub_tab, 'Scores')
