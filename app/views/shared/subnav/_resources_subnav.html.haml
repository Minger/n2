#secondary-navigation
  .tabs
    %ul
      %li{:class => sub_tab_selected?(@current_sub_tab, 'Browse Resource')}
        = link_to t('.browse_resources'), resources_path
      %li{ :class => sub_tab_selected?(@current_sub_tab, 'Suggest Resource')}
        = link_to t('.suggest_resource'), new_resource_path
      - if current_user
        %li{ :class => sub_tab_selected?(@current_sub_tab, 'My Resources')}
          = link_to t('.my_resources'), my_resources_resource_path(:id => current_user)
