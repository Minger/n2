#secondary-navigation
  .tabs
    %ul
      %li.first= link_to t('.browse_resources'), resources_path, :class => sub_tab_selected?(@current_sub_tab, 'Browse Resource')
      %li.first= link_to t('.suggest_resource'), new_resource_path, :class => sub_tab_selected?(@current_sub_tab, 'Suggest Resource')
      - if current_user
        %li.first= link_to t('.my_resources'), my_resources_resource_path(:id => current_user), :class => sub_tab_selected?(@current_sub_tab, 'My Resources')
