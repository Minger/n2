#secondary-navigation
  %ul
    - if @idea_board.present?
      %li{ :class =>  "#{sub_tab_selected?(@current_sub_tab, 'Browse Board Ideas')}" }
        = link_to t('.browse_board_ideas', :name => @idea_board.name), idea_board_path(@idea_board)
      %li{ :class =>  "tab #{sub_tab_selected?(@current_sub_tab, 'Suggest Idea')}" }
        = link_to t('.suggest_board_idea', :name => @idea_board.name), new_idea_board_idea_path(@idea_board)
    %li{ :class =>  "#{sub_tab_selected?(@current_sub_tab, 'Browse Idea Topics')}"}
      = link_to t('.browse_idea_boards'), idea_boards_path
    - if not @idea_board.present?
      %li
        = link_to t('.home_ideas'), ideas_path
    -# TODO:: add this back in
    - if false and current_user
      %li{ :class =>  "#{sub_tab_selected?(@current_sub_tab, 'My Ideas')}"  }
        = link_to t('.my_ideas'), my_ideas_idea_path(:id => current_user)
