#secondary-navigation
  %ul
    %li= link_to t('.browse_events'), events_path, :class => "tab #{sub_tab_selected?(@current_sub_tab, 'Browse Events')}" 
    - if current_user
      %li= link_to t('.my_events'), my_events_event_path(:id => current_user), :class => "tab #{sub_tab_selected?(@current_sub_tab, 'My Events')}" 
    %li= link_to t('.suggest_event'), new_event_path, :class => "tab #{sub_tab_selected?(@current_sub_tab, 'Suggest Event')}" 
    - if current_facebook_user
      %li= link_to t('.import_facebook'), import_facebook_events_path, :class => "tab #{sub_tab_selected?(@current_sub_tab, 'Add from Facebook')}"