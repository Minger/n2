-# @expects: local 'story'

- page ||= ""
- paginate ||= false
- title ||= "Small list of items"
- subtitle ||= "Subtitle of small list of items"
-# TODO:: make caching work
- cache_if false, :top_stories_html do
  -#%div{:class => "panel-1 #{defined?(widget_page) ? widget_page.css_class : ''}"}
  .panel-1
    .panel-bar
      %h2= title
    .subtitle
      %span= subtitle
    .item-list
      %ul
        - collection.each do |item|
          %li= raw render_generic_small_item(item)
