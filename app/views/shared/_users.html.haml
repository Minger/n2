- page ||= ""
- cache_if page.present?, "users_list_#{page}html" do
  - users ||= User.top_items.paginate :page => params[:page], :per_page => 10, :order => "created_at desc"
  - paginate ||= false
  .panel_1
    .panelBar
      %h2= t('.users_title')
      - if users.present? and users.first.refineable?
        .refine_link
          = render :partial => 'shared/forms/refine_dropdown'
    .subtitle
      %span= t('.users_subtitle')
    .storyList
      .list_stories
        %ul
          - users.each do |user|
            %li{'data-id' => user.cache_key}
              .feature_bg
                .thumb.bio
                  = local_linked_profile_pic user, :size => "small"
              .storyBlockMeta.float_left{ :style => 'width: 60%' }
                %h2.storyHead== #{local_linked_profile_name(user)}
                %p= caption(user.bio,350)
              .storyBlockMeta.float_right
                %h4.userPoints
                  = t('karma_score', :score => user.karma_score) 'Karma'
                  %span.pointsnote
                    Karma
                %h3.userPoints
                  = t('activity_score', :score => user.activity_score)
                  %span.pointsnote
                    Activity
    .clearfix
      = will_paginate users
      %br
