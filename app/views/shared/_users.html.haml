- page ||= ""
- cache_if (false and page.present?), "users_list_#{page}html" do
  - scores ||= Score.weekly_scores
  - paginate ||= false
  .panel_1
    .panelBar
      %h2= t('.users_title')
      - if false and users.present? and users.first.refineable?
        .refine_link
          = render :partial => 'shared/forms/refine_dropdown'
    .subtitle
      %span= t('.users_subtitle')
    .storyList
      .list_stories
        %ul
          - scores.each do |score|
            - user = score.user
            %li{'data-id' => user.cache_key}
              .thumb.user
                = local_linked_profile_pic user, :size => "small"
              .storyBlockMeta.float_left{ :style => 'width: 60%' }
                %h2.storyHead== #{local_linked_profile_name(user)}
                %p= caption(user.bio,350)
              .storyBlockMeta.float_right
                %h4.userPoints= t('total_score', :score => score.total_score)
                %h4.userPoints= t('karma_score', :score => score.karma_score)
                %h3.userPoints= t('activity_score', :score => score.activity_score)
    - if paginate
      .clearfix
        = will_paginate scores
        %br
