-# @expects: local 'slot_name'
!!!
%html
  %head
    %script{:type => "text/javascript"}
      <!--
        // configuration
        OAS_listpos='728x90_1,468x60_1,300x250_1,160x600_1,250x250_1,200x200_1,336x280_1';
        OAS_query=''+'&'+location.search.substring(1);
        OAS_target='_top';
        OAS_url='http://gcirm.dmp.gcion.com/RealMedia/ads/';
        // If OAS_sitepage is set to  it means you did not set the value in the .ini file.
        == OAS_sitepage='#{APP_CONFIG['helios_sitepage']}';
        // endconfiguration
        OAS_version=10;
        OAS_rn='001234567890'; OAS_rns = '1234567890';
        OAS_rn=new String (Math.random()); OAS_rns = OAS_rn.substring (2, 11);
        function OAS_NORMAL(pos) {
        document.write('<A HREF="' + OAS_url + 'click_nx.ads/' + OAS_sitepage + '/1' + OAS_rns + '@' + OAS_listpos + '!' + pos + '?' + OAS_query + '" TARGET=' + OAS_target + '>');
        document.write('<IMG SRC="' + OAS_url + 'adstream_nx.ads/' + OAS_sitepage + '/1' + OAS_rns + '@' + OAS_listpos + '!' + pos + '?' + OAS_query + '" BORDER=0></A>');
        }
      //-->

    = javascript_include_tag "#{APP_CONFIG['helios_url']}/global/AD/AdtechGlobalSettings.js"
    = javascript_include_tag "#{APP_CONFIG['helios_url']}/AD/AdtechSiteSettings.js"
    = javascript_include_tag "#{APP_CONFIG['helios_url']}/Scripts/AD/Adtechscript.js"

  %body{:style => "margin: 0px; padding: 0px;"}
    %script{:type => "text/javascript"}
      - case slot_name
        - when "leaderboard"
          OAS_AD('728x90_1');
        - when "small_square"
          OAS_AD('200x200_1');
        - when "skyscraper"
          OAS_AD('160x600_1');
        - when "square"
          OAS_AD('250x250_1');
        - when "medium_rectangle"
          OAS_AD('300x250_1');
        - when "large_rectangle"
          OAS_AD('336x280_1');
        - else
          OAS_AD('468x60_1');
