  %body{:style => "margin: 0px; padding: 0px;"}
    %script{:type => "text/javascript"}
      - case slot_name
        - when "slot_leaderboard"
          OAS_AD('728x90_1');
        - when "slot_small_square"
          OAS_AD('200x200_1');
        - when "slot_skyscraper"
          OAS_AD('160x600_1');
        - when "slot_square"
          OAS_AD('250x250_1');
        - when "slot_medium_rectangle"
          OAS_AD('300x250_1');
        - when "slot_large_rectangle"
          OAS_AD('336x280_1');
        - else
          OAS_AD('468x60_1');
