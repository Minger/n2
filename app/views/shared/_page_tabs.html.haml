-# Expects @current_tab to be set, done by default in app_controller
#pageTabs.clearfix
  .tabs.clearfix
    .tab-float
      %ul#toggle_tabs_unused.toggle_tabs.clearfix
        - if MENU.key? 'home'
          - if @current_tab == 'home'
            %li.first= link_to image_tag('default/home-icon-selected.png'), home_index_path, :class => tab_selected?(@current_tab, 'home')
          - else
            %li.first= link_to image_tag('default/home-icon-off.png'), home_index_path, :class => tab_selected?(@current_tab, 'home')
        - if MENU.key? 'stories'
          %li
            .menu_item
              = link_to t('.stories'), stories_path, :class => tab_selected?(@current_tab, 'stories')
              - unless MENU['stories'].nil?
                .dropdown
                  %ul
                    - unless MENU['stories']['stories_list'].nil?
                      %li= link_to t('.stories_list'), stories_path, :class => tab_selected?(@current_tab, 'stories')
                    - unless MENU['stories']['newswire'].nil?
                      %li= link_to t('.newswire'), newswires_path, :class => tab_selected?(@current_tab, 'stories')
                    - unless MENU['stories']['new_story'].nil?
                      %li= link_to t('.new_story'), new_story_path, :class => tab_selected?(@current_tab, 'stories')
                    - unless MENU['stories']['new_article'].nil?
                      %li= link_to t('.new_article'), new_article_path, :class => tab_selected?(@current_tab, 'stories')
        - if MENU.key? 'articles'
