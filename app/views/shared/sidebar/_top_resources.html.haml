-# @expects: local 'resource'

- cache :top_resources_html do
  - top_resources ||= Resource.active.tally({ :at_least => 1, :limit => 5, :order => "votes.count desc" })
  %div{:class => "panel_2 #{defined?(widget_page) ? widget_page.css_class : ''}"}
    .panelBar
      %h2= t('.top_resources_title')
    .list_items
      %ul
        - top_resources.each do |resource|
          %li
            .profilePic= local_linked_profile_pic resource.user
            = link_to resource.title, resource_path(resource)
