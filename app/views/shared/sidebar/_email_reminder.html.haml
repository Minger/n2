- cache :email_reminder_html, :expires_in => 1.days do
  %div{:class => "panel_1 #{defined?(widget_page) ? widget_page.css_class : ''}"}
    .panel-bar
      %h2= t('email_reminder.title')
    .item-list
      %ul
        %li
          .featured
            .item_2.resource
              .item-block
                - if current_user.present?
                  %p= t('email_reminder.message',  :settings_link => edit_user_path(current_user, :format => 'html') ).html_safe
                - else
                  %p= t('email_reminder.login_required')
