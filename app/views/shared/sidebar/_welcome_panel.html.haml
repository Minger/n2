-# later could add FB connect button if not signed in or registered in web connect
- unless current_user.present? and current_user.is_established?
  - case Metadata::Setting.get_setting('welcome_layout')
    - when 'host'
      .panel_2
        .houseFeatures
          .thumb
            - unless Metadata::Setting.get_setting('welcome_host').present? and Metadata::Setting.get_setting('welcome_host').empty?
              = image_tag('default/house-ad-profile.jpg')
            - else
              = local_linked_profile_pic(User.find(Metadata::Setting.get_setting('welcome_host')))
          .featureAd
            %h2= t('.welcome_panel_headline')
            %p= t('.welcome_panel_message_fbml')
    - when 'thumb'
      .panel_2
        .houseFeatures
          .thumb
            - unless Metadata::Setting.get_setting('welcome_image_url').present? and Metadata::Setting.get_setting('welcome_image_url').empty?
              = image_tag('default/house-ad-profile.jpg')
            - else
              = image_tag(Metadata::Setting.get_setting('welcome_image_url'))
          .featureAd
            %h2= t('.welcome_panel_headline')
            %p= t('.welcome_panel_message_fbml')
    - when 'banner'
      .panel_2
        .houseFeatures
          .thumbBanner
            - unless Metadata::Setting.get_setting('welcome_image_url').present? and Metadata::Setting.get_setting('welcome_image_url').empty?
              = image_tag('default/house-ad-banner.jpg')
            - else
              = image_tag(Metadata::Setting.get_setting('welcome_image_url'))
          .featureAd
            %h2= t('.welcome_panel_headline')
            %p= t('.welcome_panel_message_fbml')
    - else
      .panel_2
        .houseFeatures
          .thumb
            - unless Metadata::Setting.get_setting('welcome_image_url').present? and Metadata::Setting.get_setting('welcome_image_url').empty?
              = image_tag('default/house-ad-profile.jpg')
            - else
              = image_tag(Metadata::Setting.get_setting('welcome_image_url'))
          .featureAd
            %h2= t('.welcome_panel_headline')
            %p= t('.welcome_panel_message_fbml')
