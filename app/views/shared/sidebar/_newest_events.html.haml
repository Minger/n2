-# @expects: local 'newest_events'

- cache :newest_events_html do
  - newest_events ||= Event.active.newest
  - unless newest_events.empty?
    %div{:class => "panel_2 #{defined?(widget_page) ? widget_page.css_class : ''}"}
      .panelBar
        %h2= t('.newest_events_title')
      .list_stories
        %ul
          - newest_events.each do |event|
            %li
              .storyBlockWrap
                %h4= link_to event.name, event_path(event)
                .profilePic= local_linked_profile_pic event.user
                .eventBlockMeta
                  %h3= t('posted_by', :fb_name => local_linked_profile_name(event.user), :date => time_ago_in_words(event.created_at))
                  %span.btnComment.float_left== #{like_link event} #{event.votes_tally}
                  %span.btnComment.float_left== #{link_to t('comments'), event_path(event, :anchor => "commentListTop")} #{event.comments_count}
  - else
    %div{:class => "panel_2 #{defined?(widget_page) ? widget_page.css_class : ''}"}
      .panelBar
        %h2= t('.newest_events_title')
      .list_stories
        %ul
          %li
            No events
