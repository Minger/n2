-# @expects: local 'item'

- related_items = item.related_items
- unless related_items.empty?
  %div{:class => "panel_2 #{defined?(widget_page) ? widget_page.css_class : ''}"}
    .panelBar
      %h2= t('related_items_title')
    %ul
      - related_items.each do |related_item|
        %li
          %h4= link_to related_item.title, related_item.url
