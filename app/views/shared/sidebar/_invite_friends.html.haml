- cache :invite_friends_html, :expires_in => 1.days do
  %div{:class => "panel_1 #{defined?(widget_page) ? widget_page.css_class : ''}"}
    .panel-bar
      %h2= t('invite_friends.title')
    .item-list
      %ul
        %li
          .featured
            .item_2.resource
              .item-block
                %p= t('invite_friends.message', :site_title => get_setting('site_title').try(:value), :invite_link => invite_users_path(:format => 'html') )
