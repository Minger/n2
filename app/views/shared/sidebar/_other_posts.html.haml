-# @expects: local 'story'

.panel-1
  .panel-bar
    %h2= t('.other_posts_by', :fb_name => local_linked_profile_name(story.user)).html_safe
  .panel_block
    .item-list
      %ul
      - story.user.other_stories(story).each do |other_story|
        %li
          .item-block
            %h4= link_to other_story.title, story_path(other_story)
