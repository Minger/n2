-# @expects: local 'story'

.panel_2
  .panelBar
    %h2= t('.other_posts_by', :fb_name => local_linked_profile_name(story.user))
  .panel_block
    .list_items
      %ul
      - story.user.other_stories(story).each do |other_story|
        %li
          .itemBlock
            %h4= link_to other_story.title, story_path(other_story)
