-# @expects: local 'resource'

- cache :top_resources, :expires_in => 15.seconds do
  - top_resources ||= Resource.tally({ :at_least => 1, :limit => 5, :order => "votes.count desc" })
  .panel_2
    .panelBar.clearfix
      %h2= t('.top_resources_title')
    %br
    .list_items.clearfix
      %ul
        - top_resources.each do |resource|
          %li
            .profilePic= local_linked_profile_pic resource.user
            = link_to resource.title, resource_path(resource)
