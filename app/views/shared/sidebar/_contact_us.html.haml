- cache :contact_us_html, :expires_in => 1.days do
  %div{:class => "panel-1 #{defined?(widget_page) ? widget_page.css_class : ''}"}
    .panel-bar
      %h2= t('contact_us.title')
    .item-list
      %ul
        %li
          .featured
            .item_2.idea
              .item-block
                - if ( forum = Forum.find_by_name('Feedback') )
                  %p= t('contact_us.feedback_message', :contact_link => contact_us_path, :forum_link => forum_path(forum)).html_safe
                - else
                  %p= t('contact_us.message', :contact_link => contact_us_path).html_safe
