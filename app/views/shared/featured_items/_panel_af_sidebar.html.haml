- limit_title = 100
- limit_caption = 300
.full-panel
  .thumb= link_to image_tag(item.featured_image_url), item.featured_url
  .item-block
    %h1
      %a.ellipsis_title_2
        %span.ellipsis_text
          = link_to caption(item.featured_title,limit_title), item.featured_url, { :class => 'ellipsis_text'}
    %p.ellipsis_caption_5
      %span.ellipsis_text= caption(sanitize(strip_tags(item.featured_blurb)),limit_caption)
    %span== #{like_link item} #{item.num_votes}
    %span== #{link_to t("#{item.featured_related_locale}"), item} #{item.featured_related_count}

