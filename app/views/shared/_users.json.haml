- users ||= User.active.paginate :page => params[:page], :per_page => 10, :order => "created_at desc"
%ul
  - users.each do |user|
    %li{'data-id' => user.cache_key}
      .feature_bg
        .thumb
          -# can change size to normal, but need fixed spacer for thumb
          .profilePic= local_linked_profile_pic user, :size => "small"
      .float_left
        %h2.storyHead== #{local_linked_profile_name(user)}
        %p= caption(user.bio,350)
      .storyBlockMeta.float_right
        %h4.userPoints= user.karma_score
        %h3.userPoints= "Points"
