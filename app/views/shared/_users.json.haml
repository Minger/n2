- users ||= User.active.paginate :page => params[:page], :per_page => 10, :order => "created_at desc"
%ul
  - users.each do |user|
    %li{'data-id' => user.cache_key}
      .thumb
        - if user.images.present?
          = image_tag user.images.first.url(:thumb)                  
        - else
          = image_tag ('default/default_thumb_b.gif', :width => "100%")
      .storyBlockWrap.storyBlockSpacer
        %h2.storyHead= link_to user.title, story_path(user, :format => 'html')
        %p.storyCaption= linked_story_caption user, 150, false, :format => 'html'
        .profilePic= local_linked_profile_pic user.user, :format => 'html'
        .storyBlockMeta.float_left
          %h3= t('.users_posted_by', :fb_name => local_linked_profile_name(user.user, :format => 'html'), :date => time_ago_in_words(user.created_at))
          %span.btnComment.float_left== #{like_link user, :format => 'html'} #{user.votes_tally}
          %span.btnComment.float_left== #{link_to t('.users_comments'), story_path(user, :anchor => "commentListTop", :format => 'html')} #{user.comments_count}