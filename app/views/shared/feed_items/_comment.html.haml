-# expects 'comment => @comment'

%li
  .thumb
    - if comment.commentable.images.present?
      = image_tag comment.commentable.images.first.url(:thumb)
    - else
      = image_tag ('skin/watermark.jpg', :width => "100%")
  .item-block
    %blockquote
      .quotes      
        %p= linked_comment_caption comment
    .profile-pic= local_linked_profile_pic comment.user, :width => '30px', :height => '30px'    
    %h3= generic_posted_by comment
    %h3
      Re: 
      = link_to caption(comment.commentable.title,120), comment.commentable
    %span== #{like_link comment.commentable} #{comment.commentable.votes_tally}
    %span== #{link_to t('comments'), content_path(comment.commentable, :anchor => "commentListTop")} #{comment.commentable.comments_count}
