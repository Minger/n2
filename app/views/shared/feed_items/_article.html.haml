-# expects 'article => @article'

%li
  .thumb
    - if article.images.present?
      = image_tag article.images.first.url(:thumb)
    - else
      = image_tag ('default/watermark.jpg', :width => "100%")
  .storyBlockWrap.storyBlockSpacer
    %h2.storyHead= link_to article.title, article_path(article)
    %p.storyCaption= linked_story_caption article
    .profilePic= local_linked_profile_pic article.user
    .storyBlockMeta.float_left
      %h3= t('.stories_posted_by', :fb_name => local_linked_profile_name(article.user), :date => time_ago_in_words(article.created_at))
      %span.btnComment.float_left== #{like_link article} #{article.votes_tally}
      %span.btnComment.float_left== #{link_to t('comments'), story_path(article, :anchor => "commentListTop")} #{article.comments_count}
