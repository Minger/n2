#col_left
  %h1= t('.contact_title')
  %p= t('.contact_intro')
  - semantic_form_for @message, :url => contact_us_path do |form|
    - form.inputs do
      = form.input :subject
      = form.input :email
      = form.input :body
    - form.buttons do
      = form.commit_button :button_html => { :class => "btn", :value => "Send Message" }
  %br

#col_right