%p= link_to '&laquo; Return to template selector', admin_featured_items_path

.actions
  %button#save-button.title.fg-button.ui-state-default.ui-corner-all{:type => "button"} Save Featured Stories
  %br

- case @template_id
  - when "template_1"
    %h1 Template Builder for Template 1
    .template-builder-column
      = image_tag 'featured/template_1.jpg'
      %br
      %br
      %br
      #template_1.template-builder
        .drop-zone
          #section-1-primary.primary-drop
            %p Drop Primary Item 1 Here
          #section1-primary-title
  - when "template_2"
    %h1 Template Builder for Template 2
    .template-builder-column
      = image_tag 'featured/template_2.jpg'
      %br
      %br
      %br
      #template_2.template-builder
        .drop-zone
          #section-1-primary.primary-drop
            %p Drop Primary Item 1 Here
          #section-1-secondary1.secondary-drop.clear
            %p Drop Secondary Item 1 Here
            .clear
          #section-1-secondary2.secondary-drop
            %p Drop Secondary Item 2 Here
            .clear
        #section1-primary-title
        #section1-secondary1-title
        #section1-secondary2-title
  - when "template_3"
    %h1 Template Builder for Template 3
    .template-builder-column
      = image_tag 'featured/template_3.jpg'
      %br
      %br
      %br
      #template_3.template-builder
        .drop-zone
          #section-1-primary.primary-drop
            %p Drop Primary Item 1 Here
          #section-2-primary.primary-drop
            %p Drop Primary Item 2 Here
            .clear
        #section1-primary-title
        #section2-primary-title
  - when "template_4"
    %h1 Template Builder for Template 4
    .template-builder-column
      = image_tag 'featured/template_4.jpg'
      %br
      %br
      %br
      #template_4.template-builder
        .drop-zone
          #section-1-primary.primary-drop
            %p Drop Primary Item 1 Here
          #section-2-primary.primary-drop
            %p Drop Primary Item 2 Here
            .clear
        #section1-primary-title
        #section2-primary-title
  - when "template_5"
    %h1 Template Builder for 3 Pic Skybox
    .template-builder-column
      = image_tag 'featured/template_5.jpg'
      %br
      %br
      %br
      #template_5.template-builder
        .drop-zone
          #section-1-primary.primary-drop
            %p Drop First Item
            .clear
          #section-2-primary.primary-drop
            %p Drop Second Item
            .clear
          #section-3-primary.primary-drop
            %p Drop Third Item
            .clear
        #section1-primary-title
        #section2-primary-title
        #section3-primary-title
  - when "template_6"
    %h1 Template Builder for Template 6
    .template-builder-column
      = image_tag 'featured/template_6.jpg'
      %br
      %br
      %br
      #template_6.template-builder
        .drop-zone
          #section-1-primary.primary-drop
            %p Drop Primary Item 1 Here
          #section1-primary-title
  - when "template_7"
    %h1 Template Builder for Skyboxes
    .template-builder-column
      = image_tag 'featured/template_7.jpg'
      %br
      %br
      %br
      #template_7.template-builder
        .drop-zone
          #section-1-primary.primary-drop
            %p Drop First Item
            .clear
          #section-2-primary.primary-drop
            %p Drop Second Item
            .clear
          #section-3-primary.primary-drop
            %p Drop Third Item
            .clear
          #section-4-primary.primary-drop
            %p Drop Fourth Item
            .clear
        #section1-primary-title
        #section2-primary-title
        #section3-primary-title
        #section4-primary-title
  - when "template_8"
    %h1 Large one pic headline
    .template-builder-column
      = image_tag 'featured/template_8.jpg'
      %br
      %br
      %br
      #template_8.template-builder
        .drop-zone
          #section-1-primary.primary-drop
            %p Drop Primary Item 1 Here
          #section1-primary-title
  - when "template_9"
    %h1 Scrollable version of template1
    .template-builder-column
      = image_tag 'featured/template_1.jpg'
      %br
      %br
      %br
      #template_9.template-builder
        .drop-zone
          #section-1-primary.primary-drop
            %p Drop First Item
            .clear
          #section-2-primary.primary-drop
            %p Drop Second Item
            .clear
          #section-3-primary.primary-drop
            %p Drop Third Item
            .clear
          #section-4-primary.primary-drop
            %p Drop Fourth Item
            .clear
        #section1-primary-title
        #section2-primary-title
        #section3-primary-title
        #section4-primary-title
  
.template-item-selector-column
  %h1 Items
  = select_tag 'featured-items-select', options_for_select(@featurables)
  #items