- user = user_triggered_idea.originator
- item = user_triggered_idea.participant
.user-wrapper
  .profilePic= local_linked_profile_pic user, :width => '30px', :height => '30px', :only_path => false, :format => 'html'
  %h3
    = t('user_posted_item', :fb_name => local_linked_profile_name(user, :only_path => false, :format => 'html'), :title => link_to(item.item_title, polymorphic_url(item,:only_path => false) ), :date => time_ago_in_words(item.created_at))
