- user = user_triggered_chirp.originator
- chirp = user_triggered_chirp.participant
%p= caption((chirp.chirps.present?) ? "\"#{chirp.chirps}\"" : 'no chirp',200)

.user-wrapper
  .profilePic= local_linked_profile_pic user, :width => '30px', :height => '30px', :format => 'html'
  %h3
    = t('posted_by', :fb_name => local_linked_profile_name(user, :format => 'html'), :date => time_ago_in_words(chirp.created_at))
  %h3
    Re: 
    = link_to caption(chirp.chirpable.item_title,120), polymorphic_path(chirp.chirpable, :format => 'html')
