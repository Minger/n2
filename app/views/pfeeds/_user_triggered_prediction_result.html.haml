- user = user_triggered_answer.originator
- item = user_triggered_answer.participant
%p= pfeed_caption t('predictions.question_closed', :question => link_to(item.prediction_question.item_title, polymorphic_url(item.prediction_question,:only_path => false) ), :group => link_to(item.prediction_question.prediction_group.item_title, polymorphic_url(item.prediction_question.prediction_group,:only_path => false) ) )

.user-wrapper
  .profilePic= local_linked_profile_pic user, :width => '30px', :height => '30px', :only_path => false, :format => 'html'
  %h3
    = user_posted_item item, user
