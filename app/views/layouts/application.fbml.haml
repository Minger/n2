%fb:fbml
  = fb_title ((title = yield(:title)) ? "#{title} - #{APP_CONFIG['site_title']}" : APP_CONFIG['site_title'])
  -# = tag "meta",{:name=>"title",:content=>"#{title} - #{APP_CONFIG['site_title']}"}
  -#  = tag "meta",{:name=>"description",:content=> description = yield(:description) ? "#{description}" : ""}
  -#  = tag "link",{:rel=>"image_src",:href=> image_src = yield(:image_src) ? "#{image_src}" : "#{APP_CONFIG['base_url']}/images/default/icon-fan-app.gif"}
  -#  = tag "meta",{:name=>"medium",:content=>"news"}

  = stylesheet_link_tag 'compiled/fb_grid'

  %style
    :sass
      .moderator-links
        display: none !important
      .admin-links
        display: none !important

  %script
    == var SITE_URL = "#{APP_CONFIG['fb_ajax_url']}";
  = fb_jqjs_library
  = javascript_include_tag 'application.fbjs'

  = fb_connect_javascript_tag
  = init_fb_connect "XFBML"

  = yield :head_content

  =# javascript_include_tag current_users_path(:canvas => false, :only_path => false, :t => Time.now.to_i, :format => 'js')
  =# javascript_include_tag '/users/current.fbml'
  = javascript_include_tag "/users/current.fbml?#{Time.now.to_i}"

  = render :partial => 'shared/header'
  #appFrame
    = display_facebook_messages
    = yield :sub_nav
    = yield
  = render :partial => 'shared/footer'
  = render :partial => 'shared/fb_strings'

  - if APP_CONFIG['google_analytics_account_id'].present?
    = fb_google_analytics APP_CONFIG['google_analytics_account_id'], :udn => 'none', :ulink => 1
