- content_for :sub_nav do
  = render :partial => 'shared/subnav/resource_sections_subnav'

#left-col
  = render :partial => 'shared/resource_sections', :locals => { :resource_sections => @resource_sections }

#right-col
  = render :partial => 'shared/sidebar/resources_list', :locals => { :resources => @top_resources, :title => t('resources.top_resources') }
  = render :partial => 'shared/sidebar/resources_list', :locals => { :resources => @newest_resources, :title => t('resources.newest_resources') }
  = render :partial => 'shared/sidebar/resource_sections_list', :locals => { :resource_sections => @newest_resource_sections }
