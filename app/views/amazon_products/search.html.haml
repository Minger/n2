#col_left
  %h1 Search for amazon products
  -# form_tag :url => search_amazon_products_path do
  - form_tag do
    %p
      %label{:for => "category"} Select Amazon Category
      = select_tag "category", options_for_select(@categories.map {|c| [c, c]}, @category)
    %p
      %label{:for => "keywords"} Keywords
      = text_field_tag "keywords", @keywords
    %p
      = submit_tag "search"
  %br
  - if @items
    .panel-2
      .panel-bar
        %h2 Items
      .subtitle
        %span Items we found
      .item-list-wrap
        .item-list
          %ul
            - @items.each do |item|
              %li
                .article
                  .thumb{:style => "height: 103px"}
                    = image_tag(thumb_image_or_default item[:thumb_image_url])
                  .item-block
                    %h2= link_to item[:title], item[:url], :target => "_amazon"
                    %p item details
