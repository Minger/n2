- content_for :head_content do
  = stylesheet_link_tag 'cards'

  :javascript
    $(function() {
    	var card_loading_msg = "#{t('cards.loading_message')}";
      $('.cards_pagerBar a').click(function(event) {
        event.preventDefault();
        var pager_width = 486;
      	var page_links = $('.cards_pagerBar a');
      	var curr_page = page_links.index($(this)) + 1;
        var new_x = pager_width - (curr_page * pager_width);
        $('#thumbPanel').animate({left: new_x});
      });

      $('.card_link').click(function(event) {
      	event.preventDefault();
      	$('#selCardStage').html($("#block-"+$(this).attr('id')).clone());
      	$('#card-request-box').html(card_loading_msg);
      	var url = $(this).attr('href').replace(/^(.*?cards\/[0-9]+)(\.[a-z]+)/, "$1/get_card_form.json");
      	$.get(url, function(data) {
      		document.getElementById('card-request-box').innerHTML = data;
      		rebuild_facebook_dom();
        });
      });

      $('.showLink a').live('click', function(event) {
          event.preventDefault();
          var wrap = $(this).parent().parent().parent();
          $('.showLink', wrap).hide();
          $('.hideLink', wrap).show();
          $('.cards_displayLongCaption', wrap).animate({opacity: 'show'});
      });

      $('.hideLink a').live('click', function(event) {
          event.preventDefault();
          var wrap = $(this).parent().parent().parent();
          $('.cards_displayLongCaption', wrap).hide();
          $('.hideLink', wrap).hide();
          $('.showLink', wrap).show();
      });

    });

- content_for :sub_nav do
  = render :partial => 'shared/subnav/cards_subnav'

.card-blocks{:style => "display: none;"}
  - @cards.each do |card|
    %div{:id => "block-card-link-#{card.id}"}
      = render :partial => 'card_dialog', :locals => { :card => card }
  -#%fb:js-string{:var => "card_loading_msg"}
    = t('cards.loading_message')

#col_left
  .cards_fancyTitle.cards_floatwide
    = image_tag 'cardGraphic.jpg', :width => '13', :height => '14'
    %span.cards_fancyTitleText= t('cards.send')
  #iconPane.cards_floatwide
    #thumbPanel
      - @cards.each do |card|
        = link_to image_tag(card.image_path, :title => card.name, :class => "cards_image"), polymorphic_url(card, :only_path => false), :id => "card-link-#{card.id}", :class => "card_link"
  .cards_pagerWrap.cards_floatwide
    .cards_pagerBar
      %b PAGE:
      %span.card_pagination_links
        = (@cards.size / 6.0).ceil.times.entries.map {|k| link_to k+1, '#'}.join ' | '
  #selCardStage
    .cards_insideSelStage
      &nbsp;
      %b= t('cards.select_stage_text')
  #card-request-box

#col_right
  = render :partial => 'shared/sidebar/top_sent_cards'
  = render :partial => 'shared/sidebar/newest_sent_cards'
